% SOME VARIABLES

\dim_new:N \l__xleading_tmp_dim

% SOME FUNCTIONS

% Sets a dimen variable from a dimen expression, appending a default unit of
% 'pt', and removes extra trailing tokens, if any.
\cs_new_protected:Npn \__xleading_dim_set_default_pt:Nn #1#2
  {
    \afterassignment \use_none_delimit_by_q_stop:w
      #1 = \dimexpr #2 pt \relax
    \q_stop
  }
% Argument processor
\cs_new_protected:Npn \__xleading_arg_process_dim:n #1
  {
    \__xleading_dim_set_default_pt:Nn \l__xleading_tmp_dim {#1}
    \tl_set:NV \ProcessedArgument \l__xleading_tmp_dim
  }

% DOCUMENT COMMAND

\NewDocumentCommand \leading { s >{ \__xleading_arg_process_dim:n } m }
  {
    \mode_if_math:TF
      {
        \msg_warning:nne { xleading } { math-mode-warning }
          { \token_to_str:N \leading }
      }
      {
        \IfBooleanTF #1
          { \__xleading_add_leading:n {#2} }
          { \__xleading_set_leading:n {#2} }
      }
  }
\cs_new_protected:Npn \__xleading_add_leading:n #1
  { \__xleading_set_leading:n { (#1) + \baselineskip } }
\cs_new_protected:Npn \__xleading_set_leading:n #1
  {
    \linespread
      { \fp_eval:n { \dim_to_fp:n {#1} / \dim_to_fp:n { \f@baselineskip } } }
    \selectfont
  }

